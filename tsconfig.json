{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/*"]
}
