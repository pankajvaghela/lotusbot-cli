{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["esnext"],
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["bin/"]
}
