{
  "name": "lotusbot-cli",
  "version": "0.1.0",
  "description": "Lotus Bot CLI ",
  "author": "Pankaj Vaghela <vpankaj1998official@gmail.com>",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "lotbot-cli",
    "lotbot",
    "lotus bot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pankajvaghela/lotusbot-cli.git"
  },
  "exports": "./bin/run.js",
  "bin": {
    "lotbot": "./bin/run.js"
  },
  "scripts": {
    "lotbot-cli": "node ./bin/run.js",
    "c": "shx rm -rf dist",
    "b": "yarn build",
    "dev": "tsc -b && ./bin/dev.js",
    "rl": "yarn release:local",
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "check:prettier": "prettier -c src/",
    "format:prettier": "prettier -w src/",
    "type-check": "tsc",
    "pre-commit": "yarn format:prettier && yarn type-check && yarn lint",
    "release:local": "yarn build && npm i -g .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/yargs": "^17.0.10",
    "boxen": "^7.0.0",
    "chalk": "4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/node": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "node": ">=14.16",
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format:prettier"
    ]
  }
}
